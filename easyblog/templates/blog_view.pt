<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
    <div class="row">
      <div class="page-header span4">
        <h1 tal:content="blogname"> Login </h1>
      </div>
      <span tal:condition="provider" tal:replace="structure provider('editbar')" />
    </div><!-- row -->

    <div class="row">
      <a tal:condition="image_url" href="#" class="span4 thumbnail">
      <img tal:attributes="src image_url" alt="" />
      </a>
    </div><!-- row -->

    <div class="row">
      <div class="span8">
        <p tal:content="container"></p>
      </div>
    </div>
    
    <div class="row">
      <div class="span6 list-items">
        <h2 i18n:translate="blogposts_heading">Blogposts </h2>
        <ul class="content">
          <span tal:omit-tag="" tal:repeat="post context.order_by_time()">
           <li tal:attributes="class repeat.post.odd" >
            <a tal:attributes="href resource_url(post, request)" tal:content="post.title"></a>
          </li> 
          </span>
        </ul>	
        <div tal:condition="python: repeat.post.length > 15" class="page_navigation"></div>
	  </div>		
    </div> <!-- ROW -->

  </tal:block>
</html>
