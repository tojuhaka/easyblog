<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block  metal:fill-slot="content">
        <h2>Create a single news item</h2>
        ${form.begin(request.url)}
        ${form.csrf_token()}
        <div class="field">
          <span class="formlabel">${form.label("title")}</span>
          ${form.errors_for("title")}
          <span class="forminput">${form.text("title")}</span>
        </div>
        <div class="field">
          <span class="formlabel">${form.label("text")}</span>
          ${form.errorlist("text")}
          <span class="forminput">${form.textarea("text", rows=10)}</span>
        </div>
        <div class="buttons">
          <span class="forminput">${form.submit("submit", "Create")}</span>
        </div>
        ${form.end()}
  </tal:block>
</html>
