<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
    <h1 i18n:translate="news_topic"> Edit news
      <span tal:condition="provider" tal:replace="structure provider('editbar')" />
    </h1>
    <div tal:condition="message" class="message"> 
      <span class="message_str"> ${message} </span> 
    </div>
    ${form.begin(request.url)}
    ${form.csrf_token()}
    <table border=1>
      <thead></thead>
      <tbody>
        <div tal:repeat="news_item context">
          <tr>
            <td>
            <a tal:content="context[news_item].title" 
               tal:attributes="href resource_url(context[news_item], request)">
               News
            </a>
            </td>
            <td>
           <input tal:attributes="value news_item;
                    name string:checkbox-${news_item}"
                    class="checkbox" type="checkbox"/>
            </td>
          </tr>
        </div>
      </tbody>
    </table>
    <div class="buttons">
        ${form.submit("submit", "Delete")}
    </div>
    ${form.end()}
  </tal:block>
</html>
