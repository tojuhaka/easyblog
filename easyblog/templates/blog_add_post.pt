<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block  metal:fill-slot="content">
        <h1> ${blogname} </h1>
        <h2> Add Post </h2>
        <div class="message">
          <p> ${message} </p>
        </div>
        ${form.begin(request.url)}
        ${form.csrf_token()}
        <div class="field">
          ${form.label("subject")}
          ${form.errorlist("subject")}
          ${form.text("subject")}
        </div>
        <div class="field">
          ${form.label("text")}
          ${form.errorlist("text")}
          ${form.text("text")}
        </div>
        <div class="buttons">
            ${form.submit("submit", "Create Post")}
        </div>
        ${form.end()}
    </tal:block>
</html>
