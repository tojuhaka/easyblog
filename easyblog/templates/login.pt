<div metal:use-macro="layout">
    <div metal:fill-slot="content">
    <h1> Login </h1>
    <p> ${message} </p>
        ${form.begin(request.resource_url(request.root, '/login'))}
        ${form.csrf_token()}
        <div class="field">
          ${form.label("username")}
          ${form.text("username")}
        </div>
        <div class="field">
          ${form.label("password")}
          ${form.password("password")}
        </div>
        <div class="buttons">
            ${form.submit("submit", "Submit")}
        </div>
        ${form.hidden("came_from", came_from)}
        ${form.end()}
    </div>
</div>
