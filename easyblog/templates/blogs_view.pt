<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
        <h2 i18n:translate="blogs_topic"> List of blogs </h2>
        <div tal:repeat="blog context">
            <a tal:content="context[blog].name" 
               tal:attributes="href resource_url(context[blog], request)">
               Blogname
            </a>
        </div>
  </tal:block>
</html>
