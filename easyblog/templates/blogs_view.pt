<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
  <div class="row">
    <div class="page-header span4">
        <h1 i18n:translate="blogs_topic"> List of blogs </h1>
    </div>
    <span tal:condition="provider" tal:replace="structure provider('editbar')" />
  </div><!-- row -->
        <div tal:repeat="blog context">
            <p><a tal:content="context[blog].name" 
               tal:attributes="href resource_url(context[blog], request)">
               Blogname
            </a> created by ${context[blog].owner} </p>
        </div>
  </tal:block>
</html>
