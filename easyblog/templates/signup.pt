<div metal:use-macro="layout">
    <div metal:fill-slot="content">
        <h1> Signup </h1>
        <p> ${message} </p>
        ${form.begin(request.resource_url(request.root, 'signup'))}
        <table class="fields">
          <tr>
            <td>${form.text("username")}</td>
            <td>${form.errors_for("username")}</td>
          </tr>
          <tr>
            <td>${form.password("password")}</td>
            <td>${form.errors_for("password")}</td>
          </tr>
          <tr>
            <td>${form.password("password_confirm")}</td>
            <td>${form.errors_for("password_confirm")}</td>
          </tr>
          <tr>
            <td>${form.text("email")}</td>
            <td>${form.errors_for("email")}</td>
          </tr>
        </table>
        <div class="buttons">
            ${form.submit("submit", "Submit")}
        </div>
        ${form.end()}
    </div>
</div>
