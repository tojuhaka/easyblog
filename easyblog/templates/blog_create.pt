<div metal:use-macro="layout">
    <div id="column1" metal:fill-slot="content">
        <h2>Create Blog</h2>
        <div class="message">
          <p> ${message} </p>
        </div>
        ${form.begin(request.url)}
        ${form.csrf_token()}
        <div class="field">
          ${form.label("blogname")}
          ${form.errorlist("blogname")}
          ${form.text("blogname")}
        </div>
        <div class="buttons">
            ${form.submit("submit", "Create Blog")}
        </div>
        ${form.end()}
    </div>
</div>
