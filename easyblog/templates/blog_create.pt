<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block  metal:fill-slot="content">
    <div class="page-header"> 
      <h1> Create Blog </h1>
    </div>
    <div class="well">
      <div tal:condition="form.all_errors()" class="alert alert-error">
        ${form.errorlist()}
      </div>
      ${form.begin(request.url)}
      ${form.csrf_token()}

        <div tal:omit-tag="not: form.errorlist('blogname')"
            class="control-group error">
          <label i18n:translate="blogname">Username</label>
          <input tal:attributes="value blogname" type="blogname" name="blogname" placeholder="Type blognameâ€¦" >
          <span tal:condition="python: form.errorlist('blogname')" 
            tal:content="form.errors_for('blogname')[0]"
            class="help-inline">Please correct the error
          </span>
        </div>

        <div class="buttons">
          <button i18n:translate="login_button" class="btn" type="submit">Create Blog</button>
        </div>
        ${form.end()}
      </div>
  </tal:block>
</html>
