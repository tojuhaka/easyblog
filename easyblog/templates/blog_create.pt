<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block  metal:fill-slot="content">
        <h2>Create Blog</h2>
        <div class="message">
          <p> ${message} </p>
        </div>
        ${form.begin(request.url)}
        ${form.csrf_token()}
        <div class="field">
          ${form.label("blogname")}
          ${form.errorlist("blogname")}
          ${form.text("blogname")}
        </div>
        <div class="buttons">
            ${form.submit("submit", "Create Blog")}
        </div>
        ${form.end()}
  </tal:block>
</html>
