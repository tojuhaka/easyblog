<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block  metal:fill-slot="content">
    <div id="myCarousel" class="carousel slide">
      <!-- Carousel items -->
      <div class="carousel-inner">
        <div class="item active">
          <img class="carousel-image" src="/static/images/autumn2.jpg" />
          <div class="carousel-caption">
            <h4> Saapas kuva 1 </h4>
            <p tal:content="first_carousel"></p>
          </div>
        </div>

        <div class="item">
          <img class="carousel-image" src="/static/images/autumn.jpg" />
          <div class="carousel-caption">
            <h4> Saapas kuva 2 </h4>
            <p tal:content="second_carousel"></p>
          </div>
        </div>
      </div><!-- Carousel items -->

      <!-- Carousel nav -->
      <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div> 
    <div class="row-fluid">
        <span tal:condition="provider" tal:replace="structure provider('news_widget')" />
    </div><!--/row-->
  </tal:block>
</html>
