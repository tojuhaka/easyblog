<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
        <h1 i18n:translate="news_topic"> List of News 
                <a i18n:translate="create_news_link" tal:condition="has_permission" href="/news/create">
                  Create
                </a>
        </h1>
        <div tal:repeat="news_item context">
          <div class="news-link">
            <a tal:content="context[news_item].title" 
               tal:attributes="href resource_url(context[news_item], request)">
               News
            </a>
          </div>
        </div>
  </tal:block>
</html>
