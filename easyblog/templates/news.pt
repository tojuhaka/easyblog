<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
    <div class="row">
      <div class="page-header span4">
        <h1 i18n:translate="news_topic"> List of News </h1>
      </div>
      <span tal:condition="provider" tal:replace="structure provider('editbar')" />
    </div><!-- row -->
    <div tal:repeat="news_item context">
    <div class="news-link">
      <p><a tal:content="context[news_item].title" 
           tal:attributes="href resource_url(context[news_item], request)">
           News
        </a> - created by ${context[news_item].owner}
      </p>
    </div>
    </div>
  </tal:block>
</html>
