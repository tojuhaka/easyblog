<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
        <h2 i18n:translate="news_topic"> List of News </h2>
        <div tal:repeat="news_item context">
            <a tal:content="context[news_item].name" 
               tal:attributes="href resource_url(context[news_item], request)">
               News
            </a>
        </div>
  </tal:block>
</html>
