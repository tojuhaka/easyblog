<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
    <div class="row">
      <div class="page-header span4">
        <h1 i18n:translate="list_of_blogs">List of Blogs</h1>
      </div>
      <span tal:condition="provider" tal:replace="structure provider('editbar')" />
    </div><!-- row -->
    <div tal:repeat="row splitted_keys" class="row-fluid">
      <div tal:repeat="blog_key row" class="span3">
        <div class="thumbnail">
          <img tal:condition="context[blog_key].image_url" tal:attributes="src context[blog_key].image_url" alt="Image not available"> 
          <div class="caption">
            <h3 tal:content="context[blog_key].name">Heading</h3>
            <p tal:content="structure string:${shorten(context[blog_key].description.replace('\n', '<br />'), 30)}..."></p>
            <p><a class="btn" tal:attributes="href resource_url(context[blog_key], request)" href="#">View details &raquo;</a></p>
          </div>
        </div>
      </div>
    </div>
  </tal:block>
</html>
