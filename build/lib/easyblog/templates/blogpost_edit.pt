<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block  metal:fill-slot="content">
        <div class="message">
          <p> ${message} </p>
        </div>
        ${form.begin(request.url)}
        ${form.csrf_token()}
        <div class="field">
          <span class="formlabel">${form.label("title")} </span>
          ${form.errorlist("title")}
          <span class="forminput">${form.text("title", value=title)}</span>
        </div>
        <div class="field">
          <span class="formlabel">${form.label("text")} </span>
          ${form.errorlist("text")}
          <span class="forminput">${form.textarea("text", value=text)}</span>
        </div>
        <div class="buttons">
            ${form.submit("submit", "Save changes")}
        </div>
        ${form.end()}
    </tal:block>
</html>
