<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">
  <tal:block metal:fill-slot="content">
  <div class="row">
    <div class="page-header span4">
        <h1 i18n:translate="blogs_topic"> List of blogs </h1>
    </div>
    <span tal:condition="provider" tal:replace="structure provider('editbar')" />
  </div><!-- row -->
    <div class="row">
    <div class="span6 list-items">
        <ul class="content">
          <span tal:omit-tag="" tal:repeat="blog context.keys()">
           <li tal:attributes="class repeat.blog.odd" >
            <a tal:attributes="href resource_url(context[blog], request)" tal:content="context[blog].name"></a>
          </li> 
          </span>
        </ul>	
        <div tal:condition="python: repeat.blog.length > 15" class="page_navigation"></div>
	</div>		
    </div> <!-- ROW -->
  </tal:block>
</html>
